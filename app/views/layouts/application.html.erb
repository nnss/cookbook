    <link rel="stylesheet" href="http://static.rdla.com.ar/css/vectry/styles.css" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" href="http://static.rdla.com.ar/css/vectry/print.css" media="print" />
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
